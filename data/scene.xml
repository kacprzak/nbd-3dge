<scene>
  <assets>assets.xml</assets> 
  <camera>
    <position>
      <x>0</x>
      <y>100</y>
      <z>80</z>
    </position>
  </camera>

  <skybox>
    <texture>skybox_cubemap</texture>
    <shaderProgram>skybox</shaderProgram>
  </skybox>

  <terrain>
    <name>terrain</name>
    <heightMap>terrain-heightmap-01.png</heightMap>
    <shaderProgram>terrain</shaderProgram>
    <scale>5</scale>
    <position>
      <x>0</x>
      <y>30</y>
      <z>0</z>
    </position>
    <textures>
      <texture>grass_diffuse</texture>
      <texture>snow_diffuse</texture>
      <texture>rocky_diffuse</texture>
    </textures>
  </terrain>

  <actor>
    <name>teddy</name>
    <scale>0.2</scale>
    <position>
      <x>10</x>
      <y>100</y>
      <z>0</z>
    </position>
    <mesh>teddy</mesh>
    <shaderProgram>light</shaderProgram>
  </actor>
  
  <actor>
    <name>cube</name>
    <scale>0.2</scale>
    <position>
      <x>10</x>
      <y>80</y>
      <z>0</z>
    </position>
    <mesh>cube</mesh>
    <texture>cube_texture</texture>
  </actor>

  <actor>
    <name>cow</name>
    <position>
      <x>-10</x>
      <y>100</y>
      <z>0</z>
    </position>
    <mesh>cow</mesh>
    <shaderProgram>light</shaderProgram>
  </actor>

  <actor>
    <name>ship</name>
    <scale>0.1</scale>
    <position>
      <x>0</x>
      <y>90</y>
      <z>0</z>
    </position>
    <mesh>ship</mesh>
    <texture>ship_texture</texture>
    <shaderProgram>lightAndTex</shaderProgram>
  </actor>

  <actor>
    <name>ship_2</name>
    <scale>0.1</scale>
    <position>
      <x>10</x>
      <y>120</y>
      <z>0</z>
    </position>
    <mesh>ship</mesh>
    <texture>ship_texture</texture>
  </actor>

