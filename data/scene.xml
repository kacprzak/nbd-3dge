<scene>
  <assets>assets.xml</assets> 

  <skybox>
    <render>
      <shaderProgram>skybox</shaderProgram>
      <textures>
        <texture>skybox_cubemap</texture>
      </textures>
    </render>
  </skybox>

  <terrain>
    <name>terrain</name>
    <transformation>
      <scale>5</scale>
      <position>0 30 0</position>
    </transformation>
    <render>
      <mesh>terrain-heightmap-01.png</mesh>
      <shaderProgram>terrain</shaderProgram>
      <textures>
        <texture>grass_diffuse</texture>
        <texture>snow_diffuse</texture>
        <texture>rocky_diffuse</texture>
      </textures>
    </render>
  </terrain>

  <actor>
    <name>teddy</name>
    <transformation>
      <scale>0.2</scale>
      <position>10 100 0</position>
    </transformation>
    <render>
      <mesh>teddy</mesh>
      <shaderProgram>light</shaderProgram>
    </render>
  </actor>
  
  <actor>
    <name>cube</name>
    <transformation>
      <scale>0.2</scale>
      <position>10 80 0</position>
    </transformation>
    <render>
      <mesh>cube</mesh>
      <textures>
        <texture>cube_texture</texture>
      </textures>
    </render>
  </actor>

  <actor>
    <name>cow</name>
    <transformation>
      <position>-10 100 0</position>
    </transformation>
    <render>
      <mesh>cow</mesh>
      <shaderProgram>light</shaderProgram>
    </render>
  </actor>

  <actor>
    <name>ship</name>
    <transformation>
      <scale>0.1</scale>
      <position>0 90 0</position>
      <orientation>0 90</orientation>
    </transformation>
    <render>
      <mesh>ship</mesh>
      <textures>
        <texture>ship_texture</texture>
      </textures>
      <shaderProgram>lightAndTex</shaderProgram>
    </render>
  </actor>

  <actor>
    <name>ship_2</name>
    <transformation>
      <scale>0.1</scale>
      <position> 10 120 0</position>
    </transformation>
    <render>
      <mesh>ship</mesh>
      <textures>
        <texture>ship_texture</texture>
      </textures>
    </render>
  </actor>
</scene>

