<config>
  <assets>
    <dataFolder>../nbd-3dge/data/</dataFolder>
    <shadersFolder>../nbd-3dge/shaders/</shadersFolder>

    <shaderProgram>
      <name>default</name>
      <vertexShader>shader.vert</vertexShader>
      <fragmentShader>shader.frag</fragmentShader>
    </shaderProgram>

    <texture>
      <name>mars_front</name>
      <file>mars/mars_front.jpg</file>
    </texture>
    <texture>
      <name>mars_right</name>
      <file>mars/mars_right.jpg</file>
    </texture>
    <texture>
      <name>mars_back</name>
      <file>mars/mars_back.jpg</file>
    </texture>
    <texture>
      <name>mars_left</name>
      <file>mars/mars_left.jpg</file>
    </texture>
    <texture>
      <name>mars_top</name>
      <file>mars/mars_top.jpg</file>
    </texture>
   
    <mesh>
      <name>teddy</name>
      <file>teddy2.obj</file>
      <shading>GL_SMOOTH</shading>
    </mesh>
    
  </assets>
  <scene>
    
    <camera>
      <position>
        <x>0</x>
        <y>0</y>
        <z>80</z>
      </position>
    </camera>

    <skybox>
      <front>data/mars/mars_front.jpg</front>
      <right>data/mars/mars_right.jpg</right>
      <back>data/mars/mars_back.jpg</back>
      <left>data/mars/mars_left.jpg</left>
      <top>data/mars/mars_top.jpg</top>
      <bottom></bottom>
    </skybox>

    <actor>
      <name>teddy</name>
      <scale>0.2</scale>
      <mesh>data/teddy2.obj</mesh>
    </actor>
    
    <actor>
      <name>cube</name>
      <scale>0.2</scale>
      <position>
        <x>10</x>
        <y>0</y>
        <z>0</z>
      </position>
      <mesh>data/cube.obj<shading>GL_FLAT</shading></mesh>
      <texture>data/texture_I.png</texture>
    </actor>

    <actor>
      <name>cow</name>
      <position>
        <x>-10</x>
        <y>0</y>
        <z>0</z>
      </position>
      <mesh>data/cow.obj</mesh>
    </actor>

    <actor>
      <name>ship</name>
      <scale>0.1</scale>
      <position>
        <x>0</x>
        <y>-10</y>
        <z>0</z>
      </position>
      <mesh>data/ship.obj<shading>GL_FLAT</shading></mesh>
      <texture>data/ship.jpg</texture>
    </actor>

    <actor>
      <name>teapot</name>
      <position>
        <x>0</x>
        <y>10</y>
        <z>0</z>
      </position>
      <mesh>data/teapot.obj<shading>GL_SMOOTH</shading></mesh>
    </actor>

    <actor>
      <name>floor</name>
      <scale>10</scale>
      <position>
        <x>0</x>
        <y>-15</y>
        <z>0</z>
      </position>
      <mesh>data/floor.obj<shading>GL_FLAT</shading></mesh>
      <texture>data/texture_H.png</texture>
    </actor>

  </scene>
</config>
